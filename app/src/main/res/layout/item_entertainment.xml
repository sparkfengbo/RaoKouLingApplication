<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/listview_item_background"
        android:paddingLeft="@dimen/entertainment_horizontal_padding"
        android:paddingRight="@dimen/entertainment_horizontal_padding"
        android:paddingTop="@dimen/entertainment_vertical_padding"
        android:paddingBottom="@dimen/entertainment_vertical_padding">

    <TextView
            android:id="@+id/tvItemContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/listview_item_text_size"/>

</LinearLayout>